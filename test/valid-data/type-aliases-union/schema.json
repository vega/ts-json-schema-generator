{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "MyObject" : {
            "additionalProperties": false,
            "type" : "object",
            "properties" : {
                "a" : {
                    "type" : "number"
                }
            },
            "required" : [
                "a"
            ]
        },
        "MyOtherObject" : {
            "additionalProperties": false,
            "type" : "object",
            "properties" : {
                "b" : {
                    "type" : "string"
                }
            },
            "required" : [
                "b"
            ]
        },
        "MyUnion": {
            "anyOf": [
                {
                    "allOf": [{"$ref": "#/definitions/MyObject"}]
                },
                {
                    "allOf": [{"$ref": "#/definitions/MyOtherObject"}]
                }
            ]
        }
    },
    "allOf": [{"$ref": "#/definitions/MyUnion"}]
}