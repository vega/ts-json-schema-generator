{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "MyObject" : {
            "additionalProperties": false,
            "type" : "object",
            "properties" : {
                "a" : {
                    "type" : "number"
                }
            },
            "required" : [
                "a"
            ]
        },
        "MyOtherObject" : {
            "additionalProperties": false,
            "type" : "object",
            "properties" : {
                "b" : {
                    "type" : "string"
                }
            },
            "required" : [
                "b"
            ]
        },
        "MyUnion": {
            "anyOf": [
                {
                    "$ref": "#/definitions/MyObject"
                },
                {
                    "$ref": "#/definitions/MyOtherObject"
                }
            ]
        }
    },
    "$ref": "#/definitions/MyUnion"
}