{
    "$ref": "#/definitions/MyObject",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "MyObject": {
            "type": "object",
            "properties": {
                "defaultFormat": {
                    "type": "string",
                    "format": "date-time",
                    "examples": [
                        "2020-01-01T00:00:00.000Z"
                    ]
                },
                "time": {
                    "type": "string",
                    "format": "time",
                    "examples": [
                        "12:00:00"
                    ]
                },
                "dateOnly": {
                    "type": "string",
                    "format": "date"
                }
            },
            "required": [
                "defaultFormat",
                "time",
                "dateOnly"
            ],
            "additionalProperties": false
        }
    }
}
