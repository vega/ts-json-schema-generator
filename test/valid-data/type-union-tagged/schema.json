{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "Shape": {
            "anyOf": [
                {
                    "allOf": [{"$ref": "#/definitions/Square"}]
                },
                {
                    "allOf": [{"$ref": "#/definitions/Rectangle"}]
                },
                {
                    "allOf": [{"$ref": "#/definitions/Circle"}]
                }
            ]
        },
        "Square": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": [
                        "square"
                    ]
                },
                "size": {
                    "type": "number"
                }
            },
            "required": [
                "kind",
                "size"
            ],
            "additionalProperties": false
        },
        "Rectangle": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": [
                        "rectangle"
                    ]
                },
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                }
            },
            "required": [
                "kind",
                "width",
                "height"
            ],
            "additionalProperties": false
        },
        "Circle": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": [
                        "circle"
                    ]
                },
                "radius": {
                    "type": "number"
                }
            },
            "required": [
                "kind",
                "radius"
            ],
            "additionalProperties": false
        }
    },
    "allOf": [{"$ref": "#/definitions/Shape"}]
}
